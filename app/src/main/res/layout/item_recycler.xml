<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/basic_margin">

    <CheckBox
        android:id="@+id/checkbox_to_do_is_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/text_view_to_do"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkbox_to_do_is_done"
        android:gravity="center_vertical"
        android:textSize="@dimen/big_text"
        tools:text="Сделать дела"

        />

</RelativeLayout>